<%-include('../cabecalhoadmin.ejs')%>
<div class="container py-5 text-justify">
    <h1 class="py-2 text-center">Página principal</h1>

    <h4>Olá <%=Usuario.nome%>,</h4>
    <h4 class="py-3">Nesta página você realiza inscrição nas SACIs - Semanas Acadêmicas do Curso de Informática, nas oficinas e também tem
        acesso aos seus certificados.</h4>

    <h5>Eventos que você esta inscrito.</h5>

    <%if(Eventos.length==0){%>
        <div class="alert alert-danger mt-2 py-2" role="alert">
            Você não esta inscrito em nenhum evento.
        </div>
    <%}else{%>
    <table class="table">
        <thead class="thead-dark">
            <th>Nome</th>
            <th>Data</th>
            <th>Ativo</th>
        </thead>

        <tbody>
            <%Eventos.forEach((evento)=>{%>
            <tr>
                <td><%=evento.nome%></td>
                <td><%=moment(evento.data).format('DD/MM/YYYY') %></td>
                <td>
                    <%if(evento.ativo){%>
                    <span class="material-symbols-outlined">
                        done
                    </span>
                    <%}else{%>
                    <span class="material-symbols-outlined">
                        dangerous
                    </span>
                    <%}%>                                
                </td>                               
            </tr>
            <%})%>
        </tbody>
    </table>
    <%}%>
    <h5>Oficinas que você esta inscrito.</h5>

    <%if(Oficinas.length==0){%>
        <div class="alert alert-danger mt-2 py-2" role="alert">
            Você não esta inscrito em nenhum evento.
        </div>
    <%}else{%>
    <table class="table">
        <thead class="thead-dark">
            <th>Nome</th>
            <th>Ministrante</th>
            <th>Data</th>
            <th>Ativo</th>
        </thead>

        <tbody>
            <%Oficinas.forEach((oficina)=>{%>
            <tr>
                <td><%=oficina.nome%></td>
                <td><%=oficina.ministrante%></td>
                <td><%=moment(oficina.data).format('DD/MM/YYYY - HH:mm') %></td>
                <td>
                    <%if(oficina.ativo){%>
                    <span class="material-symbols-outlined">
                        done
                    </span>
                    <%}else{%>
                    <span class="material-symbols-outlined">
                        dangerous
                    </span>
                    <%}%>                                
                        </td>
                        
                </tr>
                <%})%>
        </tbody>
    </table>
    <%}%>

    <% if(typeof msg !== "undefined"){ %>
    <div class="alert alert-danger mt-2 py-2" role="alert">
        <%=msg%>
    </div>
    <% } %>
    <% if(typeof msgok !== "undefined"){ %>
    <div class="alert alert-primary mt-2 py-2" role="alert">
        <%=msgok%>
    </div>
    <% } %>

</div>
<%-include('../rodapeadmin.ejs')%>