<%-include('../cabecalho.ejs')%>
<div class="container py-5 text-justify">
        <h1 class="py-2 text-center">Cadastre-se</h1>
<form>
        <div class="form-group">
                <label for="iNome">Nome</label>
                <input type="text" class="form-control" id="iNome"
                        placeholder="Coloque seu nome.">
        </div>
        <div class="form-group">
                <label for="iTelefone">Celular</label>
                <input type="text" class="form-control telefone" id="iTelefone"
                        placeholder="Coloque seu telefone." aria-describedby="celularHelp">
                        <small id="celularHelp" class="form-text text-muted">Digite o telefone no seguinte formato: (53)99999-9999.</small>
                </div>
        <div class="form-group">
                <label for="iEmail">Email</label>
                <input type="email" class="form-control" id="iEmail"
                        aria-describedby="emailHelp" placeholder="Coloque seu email.">
                <small id="emailHelp" class="form-text text-muted">Nunca compartilhe seu login e
                        senha.</small>
        </div>
        <div class="form-group">
                <label for="iSenha">Senha</label>
                <input name="senha" type="password" class="form-control" id="iSenha"
                        placeholder="Coloque sua senha.">
                        
        </div>
        <div class="form-group">
                <label for="iRSenha">Repetir senha</label>
                <input name="rsenha" type="password" class="form-control" id="iRSenha"
                        placeholder="Coloque sua senha.">
        </div>
        <button type="submit" disabled class="btn btn-primary frm-botao">Entrar</button>
        <div class="alert alert-danger d-none mt-2 py-2" id="alerta" role="alert">
                As senhas devem conter pelo menos 6 caracteres e devem ser iguais.
        </div>
</form>
</div>
<%-include('../rodape.ejs')%>